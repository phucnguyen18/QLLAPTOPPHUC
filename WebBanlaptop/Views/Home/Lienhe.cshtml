
@{
    ViewBag.Title = "Lienhe";
    Layout = "~/Views/Layout/_HomeLayout.cshtml";
}

<div id="main">
    <div class="content">
        <div class="row">
            <div class="col-md-6">
                <h2>Thông tin liên hệ</h2>
                <p> Tên: MutiShop</p>
                <p> Hotline: 0886766009 hoặc 0989152176</p>
                <p> Email: multishoplaptop.gmail.com</p>
                <p> Địa chỉ: Đại Học Hutech Khu E, Phường Tân Phú, Quận 9, Thành phố Hồ Chí Minh, Việt Nam.</p>
                <p> Mọi thắc mắc xin vui lòng gửi mail hoặc gọi số điện thoại về shop để giải đáp...</p>
                <br />
                <h2> Gửi góp ý </h2>
                @using (Html.BeginForm("Gopy", "Home"))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form>
                        <div class="form-group">
                            <label> Họ tên</label>
                            <input type="text" name="txtName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label> Email</label>
                            <input type="text" name="txtEmail" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label> Nội dung</label>
                            <textarea name="txtNoidung" class="form-control"></textarea>
                        </div>
                        <button id="btnSend" class="btn btn-success">Gửi</button>
                    </form>
                }
                <div class="announcement send-error">@ViewBag.Error</div>
                <div class="announcement send-success">@ViewBag.Success</div>
            </div>
            <div class="col-md-6">
                <h2> Địa chỉ trên bản đồ</h2>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.4206639905988!2d106.78291401471911!3d10.855574792267827!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175276e7ea103df%3A0xb6cf10bb7d719327!2zSHV0ZWNoIEtodSBFIC0gVHJ1bmcgVMOibSDEkMOgbyBU4bqhbyBOaMOibiBM4buxYyBDaOG6pXQgTMaw4bujbmcgQ2Fv!5e0!3m2!1svi!2s!4v1654443794216!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>


</div>
